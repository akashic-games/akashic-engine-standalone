{
  "name": "@akashic/akashic-engine-standalone",
  "version": "3.11.1",
  "description": "A repository to release standalone Akashic Engine script",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "pre-commit": "npm t",
    "build": "rimraf \"./dist/**/{akashic-*,index*}.{js,html}\" && npm run format && run-s build:*",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:dev": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "build:view": "node scripts/build_view.js",
    "build:ext": "node scripts/build_external_libraries.js",
    "deploy": "run-s deploy:*",
    "deploy:dist": "node scripts/check_and_release_tag.js",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"src/**/*.ts\"",
    "format:eslint": "eslint \"src/**/*.ts\" --fix",
    "test": "run-s test:*",
    "test:eslint": "eslint \"src/**/*.ts\"",
    "test:remark": "remark ./*.md --frail --no-stdout --quiet"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/akashic-engine-standalone.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "CHANGELOG.md",
    "lib",
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "@akashic/eslint-config",
      "prettier"
    ],
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "**/*.js"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 140,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "remarkConfig": {
    "plugins": [
      "@akashic/remark-preset-lint"
    ]
  },
  "dependencies": {
    "@akashic/akashic-engine": "3.11.1",
    "@akashic/pdi-browser": "2.4.5",
    "@akashic/pdi-common-impl": "1.2.0",
    "@akashic/pdi-types": "1.7.0",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@akashic-extension/akashic-box2d": "3.1.0",
    "@akashic-extension/akashic-label": "3.1.0",
    "@akashic-extension/akashic-timeline": "3.2.1",
    "@akashic/eslint-config": "^1.1.1",
    "@akashic/remark-preset-lint": "^0.1.2",
    "@octokit/rest": "^19.0.5",
    "@types/node": "^18.11.13",
    "@types/url-join": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "browserify": "^17.0.0",
    "ejs": "^3.1.8",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^11.0.0",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "remark-cli": "^11.0.0",
    "rimraf": "^5.0.0",
    "semver": "^7.3.8",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-merge": "^5.8.0"
  }
}
