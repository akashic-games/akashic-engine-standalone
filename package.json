{
  "name": "@akashic/akashic-engine-standalone",
  "version": "3.21.2",
  "description": "A repository to release standalone Akashic Engine script",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "pre-commit": "npm t",
    "build": "rimraf --glob \"./dist/**/{akashic-*,index*}.{js,html}\" && npm run format && run-s build:*",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:bundle": "rollup --config rollup.config.js",
    "build:view": "node scripts/build_view.js",
    "build:ext": "node scripts/build_external_libraries.js",
    "deploy": "run-s deploy:*",
    "deploy:dist": "node scripts/check_and_release_tag.js",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"src/**/*.ts\"",
    "format:eslint": "eslint \"src/**/*.ts\" --fix",
    "test": "run-s test:*",
    "test:eslint": "eslint \"src/**/*.ts\"",
    "test:remark": "remark ./*.md --frail --no-stdout --quiet"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/akashic-engine-standalone.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "CHANGELOG.md",
    "lib",
    "dist"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 140,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "remarkConfig": {
    "plugins": [
      "@akashic/remark-preset-lint"
    ]
  },
  "dependencies": {
    "@akashic/akashic-engine": "3.21.2",
    "@akashic/amflow": "3.3.0",
    "@akashic/pdi-browser": "2.10.4",
    "@akashic/pdi-common-impl": "1.4.1",
    "@akashic/pdi-types": "1.14.0",
    "@akashic/playlog": "3.4.1",
    "@akashic/trigger": "^2.1.3",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@akashic-extension/akashic-box2d": "3.1.4",
    "@akashic-extension/akashic-label": "3.1.0",
    "@akashic-extension/akashic-timeline": "3.2.2",
    "@akashic/eslint-config": "^3.0.2",
    "@akashic/remark-preset-lint": "^0.1.2",
    "@octokit/rest": "^19.0.13",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/node": "^24.0.0",
    "@types/url-join": "^5.0.0",
    "browserify": "^17.0.0",
    "ejs": "^3.1.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^9.0.0",
    "npm-check-updates": "^19.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "remark-cli": "^12.0.0",
    "rimraf": "^6.0.0",
    "rollup": "^3.26.3",
    "tslib": "^2.8.1",
    "typescript": "^5.1.3"
  }
}
